<%= form_for Pair.new  do |f| %>
<div class="form-group">
<label style="text-align:center;">Choose the desired date</label><br>
<%= f.date_select :day, class: "form-control" %>
<br><br>
<div class="actions">
<%= f.submit "Generate pairs", class: "btn btn-lg btn-block btn-primary add-pair" %>
</div>
</div>

<% end %>
